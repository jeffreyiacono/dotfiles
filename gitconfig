[user]
  name = Paul Rosania
  email = paul.rosania@gmail.com

[color]
  diff = auto
  branch = auto
  status = auto

[alias]
  aa = add --all
  ap = add --patch
  amend = commit --amend
  fix = commit --amend -C HEAD
  s = status
  w = whatchanged
  d = diff
  dc = diff --cached
  ds = diff --stat
  dom = diff origin/master
  b = branch
  l = log
  lb = log --format=oneline origin/master..
  lg = log -i --grep
  ll = log -p
  ci = commit
  co = checkout
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  rom = rebase origin/master
  riom = rebase -i origin/master
  rn = revert --no-commit
  sta = stash
  sp = stash pop
  sl = stash list
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  pullff = pull --ff-only
  mergeff = merge --ff-only

[push]
  default = current

[core]
  excludesfile = ~/.gitignore

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[http]
  cookiefile = ~/.gitcookies
  postBuffer = 524288000
